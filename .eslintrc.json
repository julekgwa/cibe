{
  "root": true,
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "ignorePatterns": ["dist/*"],
  "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "semi": "off",
      "@typescript-eslint/semi": "error",
      "quotes": [
          "error",
          "single"
      ],
      "no-trailing-spaces": "error",
      "no-var": "error",
      "newline-per-chained-call": "error",
      "newline-after-var": [
          "error",
          "always"
      ],
      "object-curly-spacing": [
          "error",
          "always"
      ],
      "padded-blocks": [
          "error",
          "always"
      ],
      "indent": [
          "error",
          2,
          {
              "ImportDeclaration": "first"
          }
      ],
      "no-multiple-empty-lines": [
          "error",
          {
              "max": 1
          }
      ],
      "no-magic-numbers": "error"
  }
}
